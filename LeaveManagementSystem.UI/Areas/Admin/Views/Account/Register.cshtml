@model RegisterDTO

@{
    ViewBag.Title = "Register";
    ViewBag.CurrentUrl = "~/Account/Register";
}

<div class="container w-75">

    <h3 class="pt-3">Employee Registration</h3>
    <hr />

    <form asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post" class="row g-3">

        @*Email*@
        <div class="col-md-12">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>

        @*Password*@
        <div class="col-md-6">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>

        @*Confirm Password*@
        <div class="col-md-6">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
        </div>

        @*Name*@
        <div class="col-md-12">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>

        @*Role*@
        <div class="col-md-6">
            <label asp-for="Role" class="form-label">Register As</label>
            <select asp-for="Role" asp-items="@ViewBag.Roles" class="form-select">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="Role" class="form-text text-danger"></span>
        </div>

        @*Phone*@
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label">Phone Number</label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="form-text text-danger"></span>
        </div>

        @*Register button*@
        <div class="col-12">
            <button type="submit" class="btn btn-danger mb-3">Register</button>
        </div>

        <div asp-validation-summary="All" class="form-text text-danger"></div>
    </form>
</div>