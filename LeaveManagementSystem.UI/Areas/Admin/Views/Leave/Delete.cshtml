@model LeaveResponse

@{
    ViewBag.Title = "Delete Leave";
    ViewBag.CurrentUrl = "~/Leave/Delete";
}

<div class="container w-75">

    <h4 class="pt-3">Delete Leave</h4>
    <h5 class="pt-3">Are you sure to delete?</h5>
    <hr />

    <form asp-controller="Leave" asp-action="Delete" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">

        <input type="hidden" asp-for="LeaveID" />

        @*Name*@
        <div class="col-md-12">
            <label asp-for="UserID" class="form-label">Name</label>
            <select asp-for="UserID" asp-items="@ViewBag.Users" class="form-select" disabled>
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="UserID" class="form-text text-danger"></span>
        </div>

        @*Leave Type*@
        <div class="col-md-12">
            <label asp-for="LeaveTypeID" class="form-label">Leave Type</label>
            <select asp-for="LeaveTypeID" asp-items="@ViewBag.LeaveTypes" class="form-select" disabled>
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="LeaveTypeID" class="form-text text-danger"></span>
        </div>

        @*Start Date*@
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" disabled>
        </div>

        @*End Date*@
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control" disabled>
        </div>

        @*Reason*@
        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Reason</label>
            <input asp-for="Reason" class="form-control" disabled>
        </div>

        @*Delete button*@
        <button type="submit" class="btn btn-danger mt-2">Delete</button>

    </form>
</div>
