@model IEnumerable<LeaveResponse>

@{
    ViewBag.Title = "Leave";
    ViewBag.CurrentUrl = "~/Leave/Index";
}

<div class="container">

    <h3 class="pt-3">All Leave</h3>
    <a asp-controller="Leave" asp-action="Add" class="btn btn-danger mt-3">Add new leave</a>
    <hr />

    <table class="table table-bordered table-responsive mt-2">
        <thead>
            <tr>
                <th>Leave Type</th>
                <th>Date</th>
                <th>Days</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LeaveResponse leave in Model)
            {
                <tr>
                    <td>@leave.LeaveType</td>
                    <td>@leave.StartDate?.ToString("d/M/yyyy") - @leave.EndDate?.ToString("d/M/yyyy")</td>
                    <td>@leave.Days</td>
                    <td>
                        @if (leave.Status == StatusOptions.Approved.ToString())
                        {
                            <button class="btn btn-sm btn-success">Approved</button>
                        }
                        else if (leave.Status == StatusOptions.Rejected.ToString())
                        {
                            <button class="btn btn-sm btn-danger">Rejected</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-warning">Pending</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

